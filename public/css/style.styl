@import "normalize.min.css"

body
	background-color: hsl(0, 0%, 42%)
	font-family: 'Helvetica'
	
.container
	width: 100%
	margin: 0 auto
	text-align: center
	padding-top: 100px
	
#box-bot
	width: 765px
	display: inline-block
	text-align: left
	background-color: hsl(60, 26%, 71%)
	border: 1px solid hsl(0, 100%, 100%)
	padding: 10px
	
#box-profile
	width: 33%
	display: inline-block
	text-align: center

#image-bot
	height: 220px

#box-interaction
	width: 66%
	display: inline-block

#box-messages-container
	width: 100%
	height: 200px
	margin-bottom: 10px
	background-color: hsl(0, 100%, 100%)

#box-messages
	height: 180px
	padding: 10px
	overflow-y: scroll

#message
	width: 499px
	height: 25px
	font-size: 13px
	display: inline-block
	padding-left: 5px
	border:0

.message
	display: block

#message-submit
	display: none

#send-message
	width: 9%
	display: inline-block